 <script>
    // ページ読み込み完了後に呼ばれる関数
  window.addEventListener('load', function() {
    // ページ読み込み完了後にモーダルを非表示にする
    document.getElementById("loadingModal").style.display = "none";

    // 認証サーバーへの接続確認
    document.querySelector('.text').innerText = '認証サーバーへの接続開始';
  });
  function showLoading() {
    // モーダルを表示する
    document.getElementById("loadingModal").style.display = "flex";
    
    setTimeout(function() {
      document.querySelector('.text').innerText = '認証情報の取得中';
    }, 1200);

    setTimeout(function() {
      document.querySelector('.text').innerText = 'セッションID発行中';
    }, 1400);

    setTimeout(function() {
      document.querySelector('.text').innerText = 'ユーザー情報取得中';
    }, 1900);

    setTimeout(function() {
      document.querySelector('.text').innerText = 'ユーザーページの準備中';
    }, 2100);
    setTimeout(function() {
      document.querySelector('.text').innerText = '想定より時間がかかっています...';
    }, 4100);
    setTimeout(function() {
      document.querySelector('.text').innerText = 'がんばっています';
    }, 5200);
  }
</script>


